{
  "manifest_version": 3,
  "name": "GPT Helper",
  "version": "0.1.0",
  "description": "This extension will ask gpt a question containing the text you highlighted",
  "icons": {
    "64": "icons/icon_64.png"
  },
  "action": {
    "default_title": "GPT Helper",
    "default_popup": "site/popup.html"
  },
  "permissions": [
    "contextMenus", "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}