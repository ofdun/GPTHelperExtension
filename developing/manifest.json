{
  "manifest_version": 3,
  "name": "GPT Helper",
  "version": "0.1.0",
  "description": "This extension will ask gpt a question containing the text you highlighted",
  "icons": {
    "64": "icons/icon_64.png"
  },
  "action": {
    "default_title": "GPT Helper",
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting", "activeTab", "contextMenus"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["background.js"]
  }]
}